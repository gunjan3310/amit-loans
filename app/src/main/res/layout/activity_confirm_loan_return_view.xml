<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confirmLoanReturnLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".confirmloanreturn.ConfirmLoanReturnActivity">

    <TextView
        android:id="@+id/confirmLoanReturnIndividualTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Loan Return"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/confirmLoanReturnIndividualInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="ConfirmationDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmLoanReturnIndividualTitle" />

    <ImageView
        android:id="@+id/confirmLoanReturnProofImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmLoanReturnIndividualInfo"
        app:srcCompat="@drawable/ic_launcher_background" />

    <Button
        android:id="@+id/confirmLoanReturnIndividualConfirmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmLoanReturnProofImage" />

    <Button
        android:id="@+id/confirmLoanReturnIndividualReviewBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Re-View"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmLoanReturnProofImage" />
</androidx.constraintlayout.widget.ConstraintLayout>